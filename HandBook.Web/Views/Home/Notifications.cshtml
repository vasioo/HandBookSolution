@using HandBook.Models;
@model IOrderedQueryable<Notification>

@{
    ViewData["Title"] = "Notifications";
}

@section Scripts{
    <script src="@Url.Content("~/js/custom/notificationsPage.js")" type="text/javascript" asp-append-version="true"></script>
}
<div class="container">
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <partial name="_NotificationsPartial" model="@item" />
        }
        @if (Model == null || Model.Count() < 1)
        {
            <h1 class="row mt-5 pt-5 justify-content-center">
                No Notificaitons!
            </h1>
        }
    </div>
</div>
