@model IEnumerable<Messenger.Models.UserMassageDTO>

<div id="item-containter">
    @if (Model != null&&Model.Count()>0)
    {
        @foreach (var item in Model)
        {
            <a href="@Url.Action("Chat", "Messages", new { userName = item.UserData })" style="text-decoration:none">
                <div class="row border p-3">
                    <div class="row ">
                        <h3 class="text-dark">@item.UserData</h3>
                    </div>
                    <div class="row h5">
                        <h5 class="" style="color:dimgray">@item.Message</h5>
                    </div>
                </div>
            </a>
        }
    }
    else
    {
        <h1 class="row mt-5 pt-5 justify-content-center">
            No chats have been added!
        </h1>
    }
    <input type="hidden" id="currentPage" value="1" />
</div>
